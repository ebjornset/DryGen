<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net6.0</TargetFramework>
		<Nullable>disable</Nullable>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\DryGen\DryGen.csproj" />
	</ItemGroup>

	<ItemGroup>
		<!-- This code is only run from Nuke during build, so we don't care about its code coverage -->
		<SonarQubeSetting Include="sonar.coverage.exclusions">
			<Value>**</Value>
		</SonarQubeSetting>
	</ItemGroup>

	<ItemGroup>
	  <None Update="DryGen.Mermaid.ClassDiagram.From.CSharp.For.ClassDiagram.yaml">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="DryGen.Mermaid.ClassDiagram.From.CSharp.For.CommonClasses.yaml">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="DryGen.Mermaid.ClassDiagram.From.CSharp.For.EfCore.yaml">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="DryGen.Mermaid.ClassDiagram.From.CSharp.For.ErDiagram.yaml">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	</ItemGroup>

</Project>
